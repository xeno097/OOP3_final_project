@model Magazzino.Models.UserViewModel
@{
    ViewData["Title"] = "Registro";
}

<center><h1>Crea Tu Usuario</h1></center>

<form asp-action="Registro">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserNameM" class="control-label"></label>
        <input name="UserNameM" class="form-control" />
        <span asp-validation-for="UserNameM" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordM" class="control-label"></label>
        <input type="password" name="PasswordM" class="form-control" />
        <span asp-validation-for="PasswordM" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TypeM" class="control-label"></label>
        <select name="TypeM" class="form-control">
            <option value="0">Cliente</option>
            <option value="1">Vendedor</option>
        </select>
        <span asp-validation-for="TypeM" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Dirección</label>
        <input name="LocationM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <h3>Si es un Cliente</h3>
    <div class="form-group">
        <label class="control-label">Nombre</label>
        <input name="NameM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Apellido</label>
        <input name="LastNameM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Correo</label>
        <input name="MailM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Metodo de Pago</label>
        <input name="MetodoPagoM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <h3>Si es un Vendedor</h3>
    <div class="form-group">
        <label class="control-label">Nombre de Compañia</label>
        <input name="CompanyM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Telefono</label>
        <input name="TelM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Cal</label>
        <input name="CalM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Post</label>
        <input name="PostM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Policy</label>
        <input name="PolicyM" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" value="Create" class="glyphicon-calendar" />

    </div>

</form>

